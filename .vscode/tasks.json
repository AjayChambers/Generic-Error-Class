{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "COMPILE MAIN",
      "detail": "Compile src/main.cpp",
      "problemMatcher": "$gcc",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-g",
        "${cwd}/src/main.cpp",
        "-o",
        "${cwd}/out/main"
      ],
      "icon": {
        "id": "file-add",
        "color": "terminal.ansiWhite"
      },
      "presentation": {
        "group": "main",
        "reveal": "never",
        "revealProblems": "onProblem",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },

    {
      "label": "RUN MAIN",
      "detail": "Execute src/main.cpp",
      "command": "${cwd}/out/main",
      "problemMatcher": [],
      "icon": {
        "id": "play-circle",
        "color": "terminal.ansiGreen"
      },
      "presentation": {
        "group": "main",
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "showReuseMessage": false,
        "clear": false
      }
    },

    {
      "label": "Test Main",
      "dependsOn": ["COMPILE MAIN", "RUN MAIN"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiBlue"
      },
      "presentation": {
        "group": "main",
        "echo": false,
        "reveal": "never",
        "revealProblems": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      }
    }
  ]
}
